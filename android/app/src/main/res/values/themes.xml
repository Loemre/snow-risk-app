<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Snowriskapp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Snowriskapp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Style the list items -->
    <style name="Theme.Snowriskapp.CustomerCard">
        <item name="android:layout_width">match_parent</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/card_bg</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="Theme.Snowriskapp.CustomerName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Headline</item>
    </style>

    <style name="Theme.Snowriskapp.CurrentWeather">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Subhead</item>
    </style>

    <style name="Theme.Snowriskapp.WeatherTime">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Body1</item>
    </style>

    <style name="Theme.Snowriskapp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Snowriskapp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>